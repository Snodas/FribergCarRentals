@model FribergCarRentals.Models.BookingViewModel

@{
    ViewData["Title"] = "Cancel Booking";
}

<h1>Cancel Booking</h1>

<h4>Are you sure you want to cancel this booking?</h4>
<hr />
<dl class="row">
    <dt class="col-sm-2">
        Car
    </dt>
    <dd class="col-sm-10">
        @Model.Car
    </dd>
    <dt class="col-sm-2">
        Start Date
    </dt>
    <dd class="col-sm-10">
        @Model.Start.ToString("g")
    </dd>
    <dt class="col-sm-2">
        End Date
    </dt>
    <dd class="col-sm-10">
        @Model.End.ToString("g")
    </dd>
</dl>

<form asp-action="CancelConfirmed">
    <input type="hidden" asp-for="Id" />
    <input type="submit" value="Cancel Booking" class="btn btn-danger" /> |
    <a asp-action="MyBookings" class="btn btn-secondary">Back to List</a>
</form>

